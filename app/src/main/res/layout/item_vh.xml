<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.liebert.gyrolist.Views.SquareImageView
        android:id="@+id/item_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/ic_android_black_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginRight="-1dp"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@id/item_icon"
        app:layout_constraintRight_toRightOf="@+id/item_icon"
        app:layout_constraintTop_toBottomOf="@+id/item_icon"
        tools:text="Whatever really long title" />

</android.support.constraint.ConstraintLayout>